{
    "name": "CAERS_original_debug",
    "n_gpu": 1,
    "arch": {
        "type": "CAERSNet",
        "args": {}
    },
    "train_loader": {
        "type": "CAERSDataLoader",
        "args": {
            "root": "./scripts/emotion/data/CAER-S/train",
            "detect_file": "./data/train.txt",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "test_loader": {
        "type": "CAERSDataLoader",
        "args": {
            "root": "./frame/",
            "detect_file": "./output/tracking_output/final_test.track.txt",
            "train": false,
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.005,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 80,
        "save_dir": "./saved/",
        "save_period": 3,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 40,
        "tensorboard": true
    }
}